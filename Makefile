# Makefile for the Twine threading library
# $ make all     # Build library + test program
# $ make lib     # Build library (thread.o)

SHELL = /bin/sh
CC = gcc
FLAGS = -D__MAKECONTEXT_V2_SOURCE -Wall

all:   simplemutex simplethreads

simplemutex:   thread.o simplemutex.o
	$(CC) $(FLAGS)  thread.o simplemutex.o -o simplemutex

simplethreads:   thread.o simplethreads.o
	$(CC) $(FLAGS)  thread.o simplethreads.o -o simplethreads

lib:   
	$(CC) $(FLAGS) -c thread.c -o thread.o

clean:   
	-rm -rf thread.o
	-rm -rf simplethreads.o
	-rm -rf simplemutex.o
	-rm -rf simplethreads
	-rm -rf simplemutex

# Generated by Ruby2Make
